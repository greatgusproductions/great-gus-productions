<section class="film-details fade-in">

  <h1>Beyond the Shadows (2021)</h1>

  <p class="synopsis">
    Ghosts aren't real. That's why Drexler Faust and his Beyond the Shadows crew fake them for their show. Wanting more fans, Drex and the gang head to the Chetco River Lodge to explore the paranormal activity of the massacred Native spirits from before. The only problem... this time the ghosts are REAL.
  </p>

  <p class="rating-note">
    Rated for Mature Audiences Only
  </p>

  <div class="reviews-center">
    <a 
      class="reviews-btn"
      href="/beyond-the-shadows-reviews"
      target="_blank"
    >
      External Reviews
    </a>
  </div>

</section>


<section class="film-comments fade-in">
  <div id="disqus_thread"></div>
</section>


<script>
document.addEventListener("DOMContentLoaded", () => {

  const infoBtn = document.querySelector(".info-btn") as HTMLButtonElement | null;
  const panel = document.getElementById("infoPanel");
  const closeBtn = document.querySelector(".close-panel") as HTMLButtonElement | null;
  const sideControls = document.getElementById("sideControls");

  if(infoBtn && panel){
  infoBtn.onclick = () => {
    panel.classList.remove("hidden");
    document.body.classList.add("panel-open");
  };
}

if(closeBtn && panel){
  closeBtn.onclick = () => {
    panel.classList.add("hidden");
    document.body.classList.remove("panel-open");
  };
}


  document.querySelectorAll<HTMLButtonElement>(".video-thumb").forEach(btn => {
    btn.addEventListener("click", () => {
      const id = btn.dataset.id || "";
      const iframe = document.createElement("iframe");
      iframe.src = `https://www.youtube.com/embed/${id}?autoplay=1&rel=0`;
      iframe.allow = "autoplay; encrypted-media";
      iframe.allowFullscreen = true;
      iframe.style.width = "100%";
      iframe.style.aspectRatio = "16/9";
      iframe.style.border = "0";
      btn.replaceWith(iframe);

      if(sideControls){
        sideControls.classList.remove("hidden");
      }
    });
  });

});
</script>


<script>
  var disqus_config = function () {
  // @ts-ignore
  this.page.url = window.location.href;
  // @ts-ignore
  this.page.identifier = "beyond-the-shadows";
};


  (function() {
    var d = document, s = d.createElement('script');
    s.src = 'https://greatgusproductions.disqus.com/embed.js';
    s.setAttribute('data-timestamp', Date.now().toString());
    (d.head || d.body).appendChild(s);
  })();
</script>


<style>

:root{
  --accent:#f3d806;
}

.fade-in{
  opacity:0;
  transform:translateY(20px);
  animation:fadeUp .9s ease forwards;
}

@keyframes fadeUp{
  to{ opacity:1; transform:translateY(0); }
}

/* VIDEO */

.video-wrapper{
  max-width:960px;
  margin:40px auto;
  position:relative;
}

.video-thumb{
  border:none;
  background:none;
  padding:0;
  width:100%;
  cursor:pointer;
}

.video-thumb img{
  width:100%;
  border-radius:10px;
  display:block;
  filter:brightness(1.28) contrast(1.06) saturate(1.06);
  box-shadow:0 6px 18px rgba(0,0,0,.35);
  outline:1px solid rgba(255,255,255,.04);
}

/* HERO BUTTONS */

.hero-actions{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%);
  display:flex;
  gap:40px;
  font-family:Helvetica, Arial, sans-serif;
  font-weight:300;
  font-size:21px;
}

.hero-btn{
  display:flex;
  align-items:center;
  gap:10px;
  color:white;
  cursor:pointer;
  text-decoration:none;
}

.hero-text{
  border-bottom:1px solid white;
  padding-bottom:2px;
}

.icon-circle{
  width:36px;
  height:36px;
  border:2px solid white;
  border-radius:50%;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:16px;
}

/* SIDE CONTROLS */

.side-controls{
  position:absolute;
  top:10px;
  right:-128px;
  display:flex;
  flex-direction:column;
  align-items:flex-start;
  gap:2px;
  width:120px;
  font-family:Helvetica, Arial, sans-serif;
}

.hidden{ display:none; }

.side-btn{
  display:flex;
  align-items:center;
  gap:8px;
  font-size:13px;
  color:white;
  opacity:.75;
  text-decoration:none;
  background:none;
  border:none;
  cursor:pointer;
  width:90px;
  line-height:1.1;
}

.side-icon{
  width:11px;
  display:inline-block;
  text-align:center;
  font-size:11px;
  line-height:1;
}



.side-btn:hover{ opacity:1; }

.side-label{
  opacity:1;
}

.hover-only{
  opacity:0;
  transition:opacity .2s ease;
}

.side-btn:hover .hover-only{
  opacity:1;
}


/* DETAILS */

.film-details{
  max-width:960px;
  margin:40px auto;
  text-align:left;
}

.film-details h1{
  color:var(--accent);
  font-family:'Overlock',cursive;
  font-weight:100;
  font-size:32px;
}

.synopsis{
  font-size:16px;
  font-weight:300;
  line-height:1.7;
  color:#f4f4f4;
}

.rating-note{
  margin-top:10px;
  font-weight:300;
  opacity:.6;
}

/* REVIEWS + DISQUS ALIGNMENT */

.reviews-center{
  text-align:center;
  margin-top:30px;
}

.reviews-btn,
.reviews-btn:visited,
.reviews-btn:hover,
.reviews-btn:active{
  color:var(--accent);
  text-decoration:none;
  font-family:'Overlock',cursive;
}

.film-comments{
  max-width:960px;
  margin:130px auto 110px auto;
  text-align:center;
}

#disqus_thread{
  max-width:960px;
  margin:0 auto;
}

#disqus_thread img{
  filter:grayscale(100%) brightness(.9);
}

/* PANEL INSIDE VIDEO */

.info-panel{
  position:absolute;
  inset:0;
  background:rgba(0,0,0,.92);
  backdrop-filter:blur(8px);
  z-index:50;
}

.panel-content{
  display:flex;
  gap:30px;
  padding:30px 30px 0px 30px;
  height:100%;
  overflow-y:auto;
  overscroll-behavior:contain;
  box-shadow: inset 0 0 40px rgba(0,0,0,.35);
}

.poster{
  width:auto;
  max-width:260px;
  height:auto;
  object-fit:contain;
  align-self:flex-start;
  margin-top:10px;
}

body.panel-open{
  overflow:hidden;
}

.panel-text{
  color:white;
  max-width:600px;
  font-size:14px;
  font-weight:300;
  padding-bottom:100px;
}

.meta{
  opacity:.75;
  margin:8px 0 14px;
  font-size:13px;
}

.panel-synopsis{
  line-height:1.6;
  opacity:.9;
}

.two-col{
  display:grid;
  grid-template-columns:1fr 1fr;
  gap:20px;
}

hr{
  border:none;
  border-top:1px solid rgba(255,255,255,.15);
  margin:24px 0;
}

.close-panel{
  position:absolute;
  top:20px;
  right:20px;
  font-size:28px;
  background:none;
  border:none;
  color:white;
  cursor:pointer;
}

/* FILM GRAIN */

body::after{
  content:"";
  position:fixed;
  inset:0;
  pointer-events:none;
  opacity:.07;
  background-image:url("https://grainy-gradients.vercel.app/noise.svg");
}

</style>

</BaseLayout>
