---
import BaseLayout from "../layouts/BaseLayout.astro";
const trailerId = "C1m6VqW01qc";
---

<BaseLayout title="Beyond the Shadows (2021)">

<section class="film-hero fade-in">

  <div class="video-wrapper">

    <div class="video-thumb" role="button" tabindex="0" data-id={trailerId}>
      <img 
        src="/images/thumbnails/bts-thumb.jpg" 
        alt="Beyond the Shadows Trailer"
        loading="eager"
      />

      <div class="hero-actions">
        <span class="hero-btn">
          <span class="icon-circle">▶</span>
          <span class="hero-text">Watch Trailer</span>
        </span>

        <a 
          class="hero-btn"
          href="https://watch.greatgusproductions.com/checkout/subscribe/purchase"
          target="_blank" rel="noopener"
        >
          <span class="icon-circle">$</span>
          <span class="hero-text">Subscribe</span>
        </a>
      </div>
    </div>

    <div class="side-controls hidden" id="sideControls">

      <a 
        class="side-btn"
        href="https://watch.greatgusproductions.com/checkout/subscribe/purchase"
        onclick="window.open(this.href,'_blank','noopener,width=1200,height=800'); return false;"
      >
        <span class="side-icon">$</span>
        <span class="side-label">$2.80</span>
      </a>

      <button class="side-btn info-btn">
        <span class="side-icon">ⓘ</span>
        <span class="side-label hover-only">Video Info</span>
      </button>

    </div>

    <!-- PANEL now contained inside video frame -->
    <div class="info-panel hidden" id="infoPanel">
      <button class="close-panel">×</button>

      <div class="panel-content">

        <img class="poster" src="/images/posters/bts-poster.jpg" alt="Poster" />

        <div class="panel-text">

          <h2>Beyond the Shadows (2021)</h2>

          <p class="meta">
            By Great Gus Productions &nbsp; | &nbsp; Horror Comedy &nbsp; | &nbsp; Film &nbsp; | &nbsp; 1 hr 31 m
