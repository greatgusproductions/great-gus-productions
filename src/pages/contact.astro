---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact Us | Great Gus Productions">
  <section class="contact">
    <h1>Contact Us</h1>
    <p class="contact-intro">
      Have a question, collaboration idea, or press inquiry?  
      Send us a message and we’ll get back to you.
    </p>

    <form
      name="contact"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      action="/contact-success"
      class="contact-form"
    >
      <!-- Required hidden field for Netlify -->
      <input type="hidden" name="form-name" value="contact" />

      <!-- Honeypot (spam protection) -->
      <p class="hidden">
        <label>
          Don’t fill this out: <input name="bot-field" />
        </label>
      </p>

      <label>
        Name
        <input type="text" name="name" required />
      </label>

      <label>
        Email
        <input type="email" name="email" required />
      </label>

      <label>
        Message
        <textarea name="message" rows="6" required></textarea>
      </label>

      <button type="submit">Send Message</button>
    </form>
  </section>

  <style>
    .contact {
      max-width: 640px;
      margin: 4rem auto 0;
      text-align: left;
    }

    .contact h1 {
      font-size: 28px;
      margin-bottom: 0.5rem;
    }

    .contact-intro {
      color: #ccc;
      margin-bottom: 2rem;
      font-size: 14px;
      line-height: 1.6;
    }

    .contact-form {
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
    }

    label {
      display: flex;
      flex-direction: column;
      font-size: 13px;
      color: #ddd;
      gap: 6px;
    }

    input,
    textarea {
      background: #000;
      border: 1px solid #444;
      color: #fff;
      padding: 10px;
      font-size: 14px;
      font-family: inherit;
    }

    input:focus,
    textarea:focus {
      outline: none;
      border-color: #fff;
    }

    button {
      margin-top: 1rem;
      align-self: flex-start;
      background: #fff;
      color: #000;
      border: none;
      padding: 10px 18px;
      font-size: 13px;
      cursor: pointer;
    }

    button:hover {
      opacity: 0.85;
    }

    .hidden {
      display: none;
    }
  </style>
</BaseLayout>
